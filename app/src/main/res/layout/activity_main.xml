<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/black"
        android:gravity="right|center"
        android:textSize="60sp"
        android:text="0"
        android:textColor="@color/white" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/bnc"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:text="C"
                android:onClick="clearClick"
                android:textSize="24sp"
                android:layout_margin="2pt"/>
            <Button
                android:id="@+id/bnprcnt"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:text="%"
                android:textSize="24sp"
                android:layout_margin="2pt"/>
            <Button
                android:id="@+id/bnbck"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:text="⌫"
                android:onClick="delClick"
                android:textSize="24sp"
                android:layout_margin="2pt"/>
            <Button
                android:id="@+id/bndevide"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:onClick="operationClick"
                android:text="÷"
                android:backgroundTint="@color/black"
                android:textColor="#FFFF00"
                android:textSize="24sp"
                android:layout_margin="2pt"/>

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/bnseven"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:text="7"
                android:onClick="numberClick"
                android:textSize="24sp"
                android:layout_margin="2pt"/>
            <Button
                android:id="@+id/bneight"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:text="8"
                android:onClick="numberClick"
                android:textSize="24sp"
                android:layout_margin="2pt"/>
            <Button
                android:id="@+id/bnnine"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:text="9"
                android:onClick="numberClick"
                android:textSize="24sp"
                android:layout_margin="2pt"/>
            <Button
                android:id="@+id/bnmultiply"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:onClick="operationClick"
                android:text="×"
                android:backgroundTint="@color/black"
                android:textColor="#FFFF00"
                android:textSize="24sp"
                android:layout_margin="2pt"/>

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/bnfour"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:text="4"
                android:onClick="numberClick"
                android:textSize="24sp"
                android:layout_margin="2pt"/>
            <Button
                android:id="@+id/bnfive"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:text="5"
                android:onClick="numberClick"
                android:textSize="24sp"
                android:layout_margin="2pt"/>
            <Button
                android:id="@+id/bnsix"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:text="6"
                android:onClick="numberClick"
                android:textSize="24sp"
                android:layout_margin="2pt"/>
            <Button
                android:id="@+id/bnsubtract"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:onClick="operationClick"
                android:text="-"
                android:backgroundTint="@color/black"
                android:textColor="#FFFF00"
                android:textSize="24sp"
                android:layout_margin="2pt"/>

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/bnone"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:text="1"
                android:onClick="numberClick"
                android:textSize="24sp"
                android:layout_margin="2pt"/>
            <Button
                android:id="@+id/bntwo"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:text="2"
                android:onClick="numberClick"
                android:textSize="24sp"
                android:layout_margin="2pt"/>
            <Button
                android:id="@+id/bnthree"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:text="3"
                android:onClick="numberClick"
                android:textSize="24sp"
                android:layout_margin="2pt"/>
            <Button
                android:id="@+id/bnadd"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:text="+"
                android:onClick="operationClick"
                android:backgroundTint="@color/black"
                android:textColor="#FFFF00"
                android:textSize="24sp"
                android:layout_margin="2pt"/>

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/bnsdouble"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:text="00"
                android:onClick="numberClick"
                android:textSize="24sp"
                android:layout_margin="2pt"/>
            <Button
                android:id="@+id/bnzero"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:text="0"
                android:onClick="numberClick"
                android:textSize="24sp"
                android:layout_margin="2pt"/>
            <Button
                android:id="@+id/bndot"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:text="."
                android:onClick="numberClick"
                android:textSize="24sp"
                android:layout_margin="2pt"/>
            <Button
                android:id="@+id/bnequals"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_weight="1"
                android:text="="
                android:onClick="equalsClick"
                android:backgroundTint="@color/black"
                android:textColor="#FFFF00"
                android:textSize="24sp"
                android:layout_margin="2pt"/>

        </TableRow>



    </TableLayout>


</LinearLayout>